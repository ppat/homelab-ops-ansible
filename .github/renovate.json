{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "(^|/).+\\.ya?ml$"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>[a-z-.]+?)\\s+depName=(?<depName>[a-zA-Z0-9-\/]+?)(\\s+repository=(?<registryUrl>[^\\s]+?))?(\\s+versioning=(?<versioning>[^\\s]+?))?\\s*\\n.+[\\:\\=]\\s?\"v?(?<currentValue>[^\\s]+)\""
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    }
  ],
  "extends": [
    "config:best-practices",
    "group:linters",
    "mergeConfidence:all-badges",
    "github>ppat/renovate-presets",
    "github>ppat/renovate-presets:dev-tools",
    "github>ppat/renovate-presets:github-actions",
    "github>ppat/homelab-ops-ansible//.github/renovate/semantic-commit-scope",
    "github>ppat/homelab-ops-ansible//.github/renovate/exceptions-min-release-age",
    "github>ppat/homelab-ops-ansible//.github/renovate/exceptions-confidence"
  ],
  "internalChecksFilter": "strict",
  "kubernetes": {
    "fileMatch": [
      "k3s/molecule/default/test-resources/.+\\.yaml$"
    ]
  },
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "rebaseWhen": "behind-base-branch",
  "timezone": "US/Eastern"
}
