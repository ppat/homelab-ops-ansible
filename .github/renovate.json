{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    "group:linters"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "(^|/).+\\.ya?ml$"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>[a-z-.]+?)\\s+depName=(?<depName>[a-zA-Z0-9-\/]+?)(\\s+repository=(?<registryUrl>[^\\s]+?))?(\\s+versioning=(?<versioning>[^\\s]+?))?\\s*\\n.+[\\:\\=]\\s?\"(?<currentValue>[^\\s]+)\""
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    }
  ],
  "kubernetes": {
    "fileMatch": [
      "k3s/molecule/default/flux-prerequisites/.+\\.yaml$",
      "k3s/molecule/default/flux-root/.+\\.yaml$",
      "k3s/roles/bootstrap_flux/templates/.+\\.yaml$"
    ]
  },
  "packageRules": [
    {
      "groupName": "all ansible-galaxy non-major dependencies",
      "groupSlug": "ansible-galaxy-non-major-deps",
      "matchManagers": [
        "ansible-galaxy"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    },
    {
      "groupName": "all ansible-galaxy major dependencies",
      "groupSlug": "ansible-galaxy-deps",
      "matchManagers": [
        "ansible-galaxy"
      ],
      "matchUpdateTypes": [
        "major"
      ]
    },
    {
      "groupName": "all github-action dependencies",
      "groupSlug": "github-actions-deps",
      "matchFileNames": [
        ".github/workflows/**"
      ],
      "matchManagers": [
        "github-actions"
      ]
    },
    {
      "groupName": "all npm non-major dependencies",
      "groupSlug": "npm-deps-non-major",
      "matchDatasources": [
        "npm"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    },
    {
      "groupName": "all npm major dependencies",
      "groupSlug": "npm-deps",
      "matchDatasources": [
        "npm"
      ],
      "matchUpdateTypes": [
        "major"
      ]
    },
    {
      "groupName": "all python non-major dependencies",
      "groupSlug": "pypi-deps-non-major",
      "matchDatasources": [
        "pypi"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    },
    {
      "groupName": "all python major dependencies",
      "groupSlug": "pypi-deps",
      "matchDatasources": [
        "pypi"
      ],
      "matchUpdateTypes": [
        "major"
      ]
    },
    {
      "groupName": "ansible-core non-major versions",
      "groupSlug": "ansible-core-non-major",
      "matchDatasources": [
        "pypi"
      ],
      "matchPackageNames": [
        "ansible-core"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    },
    {
      "groupName": "ansible-core major versions",
      "groupSlug": "ansible-core",
      "matchDatasources": [
        "pypi"
      ],
      "matchPackageNames": [
        "ansible-core"
      ],
      "matchUpdateTypes": [
        "major"
      ]
    },
    {
      "matchPackageNames": [
        "ansible-lint",
        "molecule",
        "molecule-plugins"
      ],
      "matchDatasources": [
        "pypi"
      ],
      "allowedVersions": "<24"
    },
    {
      "matchPackageNames": [
        "requests"
      ],
      "matchDatasources": [
        "pypi"
      ],
      "allowedVersions": "<2.32.0"
    }
  ],
  "prHourlyLimit": 10,
  "prConcurrentLimit": 20,
  "rebaseWhen": "behind-base-branch",
  "semanticCommits": "enabled",
  "separateMajorMinor": true,
  "separateMultipleMajor": false
}
