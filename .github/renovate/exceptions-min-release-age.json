{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "matchDatasources": [
        "github-releases",
        "pypi"
      ],
      "matchPackageNames": [
        "ansible-core",
        "fluxcd/flux2",
        "k3s-io/k3s",
        "kubernetes-sigs/kustomize"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "minimumReleaseAge": "7 days"
    },
    {
      "matchDatasources": [
        "github-releases",
        "pypi"
      ],
      "matchPackageNames": [
        "ansible-core",
        "fluxcd/flux2",
        "kubernetes-sigs/kustomize"
      ],
      "matchUpdateTypes": [
        "minor"
      ],
      "minimumReleaseAge": "30 days"
    },
    {
      "matchDatasources": [
        "github-releases",
        "pypi"
      ],
      "matchPackageNames": [
        "k3s-io/k3s"
      ],
      "matchUpdateTypes": [
        "minor"
      ],
      "minimumReleaseAge": "90 days"
    },
    {
      "matchDatasources": [
        "github-releases",
        "pypi"
      ],
      "matchPackageNames": [
        "ansible-core",
        "fluxcd/flux2",
        "k3s-io/k3s",
        "kubernetes-sigs/kustomize"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "minimumReleaseAge": "180 days"
    },
    {
      "matchPackageNames": [
        "k3s-io/k3s"
      ],
      "versioning": "semver-coerced"
    }
  ]
}
