---
apiVersion: v1
kind: Namespace
metadata:
  name: cert-manager
---
apiVersion: v1
kind: Secret
metadata:
  name: cert-manager-bootstrap-secret
  namespace: cert-manager
type: Opaque
stringData:
  cloudflare_apitoken: "secret"
  dns01_recursive_nameservers: "8.8.8.8:53"
  dns_zone: "example.net"
  letsencrypt_email: "email@example.net"
---
apiVersion: v1
kind: Namespace
metadata:
  name: external-dns
---
apiVersion: v1
kind: Secret
metadata:
  name: external-dns-bootstrap-secret
  namespace: external-dns
type: Opaque
stringData:
  pihole_server: "https://pihole.example.net"
  pihole_password: "secret"
