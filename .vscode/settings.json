{
  "ansible.validation.lint.enabled": true,
  "ansible.validation.lint.arguments": "-c .ansible-lint -i .ansible-lint-ignore",
  "editor.detectIndentation": true,
  "editor.indentSize": 2,
  "editor.insertSpaces": true,
  "editor.rulers": [
    200
  ],
  "explorer.excludeGitIgnore": true,
  "files.associations": {
    "*.yaml": "yaml",
    "*.yml": "yaml"
  },
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
  "python.analysis.typeCheckingMode": "basic",
  "search.exclude": {
    "**/dist": true,
    "**/node_modules": true,
    "**/package-lock.json": true,
    "**/poetry.lock": true
  },
  "search.useIgnoreFiles": true,
  "yaml.format.enable": true,
  "yaml.validate": true,
  "yaml.schemas": {
    "https://raw.githubusercontent.com/ansible/ansible-lint/main/src/ansiblelint/schemas/ansible.json": [
      "roles/*/tasks/*.y*ml",
      "roles/*/handlers/*.y*ml",
      "playbooks/*.y*ml"
    ],
    "https://raw.githubusercontent.com/ansible/ansible-lint/main/src/ansiblelint/schemas/molecule.json": [
      "**/molecule/*/molecule.yml"
    ]
  },
  "yaml.customTags": [
    "!vault"
  ],
  "[javascript]": {
    "editor.detectIndentation": false,
    "editor.indentSize": 2
  },
  "[jinja]": {
    "editor.formatOnPaste": false,
    "editor.formatOnSave": false
  },
  "[json]": {
    "editor.detectIndentation": false,
    "editor.indentSize": 2
  },
  "[shellscript]": {
    "editor.detectIndentation": false,
    "editor.indentSize": 2
  },
  "[yaml]": {
    "editor.detectIndentation": false,
    "editor.indentSize": 2,
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "keep",
    "editor.formatOnSave": true
  },
  "debug.javascript.defaultRuntimeExecutable": {
    "pwa-node": "/home/coder/.local/share/mise/shims/node"
  },
  "shellcheck.executablePath": "/home/coder/.local/share/mise/shims/shellcheck"
}
