{
  "ansible.validation.lint.enabled": false,
  "ansible.validation.lint.arguments": "-c .ansible-lint -i .ansible-lint-ignore",
  "editor.detectIndentation": true,
  "editor.indentSize": 2,
  "editor.insertSpaces": true,
  "explorer.excludeGitIgnore": true,
  "search.exclude": {
    "**/dist": true,
    "**/node_modules": true,
    "**/package-lock.json": true,
    "**/poetry.lock": true
  },
  "search.useIgnoreFiles": true,

  "[javascript]": {
    "editor.detectIndentation": false,
    "editor.indentSize": 2
  },
  "[jinja]": {
    "editor.formatOnPaste": false,
    "editor.formatOnSave": false
  },
  "[json]": {
    "editor.detectIndentation": false,
    "editor.indentSize": 2
  },
  "[shellscript]": {
    "editor.detectIndentation": false,
    "editor.indentSize": 2
  },
  "debug.javascript.defaultRuntimeExecutable": {
    "pwa-node": "/home/coder/.local/share/mise/shims/node"
  },
  "shellcheck.executablePath": "/home/coder/.local/share/mise/shims/shellcheck"
}
